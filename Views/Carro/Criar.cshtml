@{
    ViewData["Title"] = "Criar Veículo";
}


<div class="text-center">

    <h1 class="display-4">Cadastrar Veículo</h1>

</div>

<div class="d-grig gap-2 d-md-flex justify-content-md-start">
<form>
    <div class="mb-3">
        <label for="placa" class="form-label">Placa</label>
        <input type="text" class="form-control" placeholder="Digite a placa do veículo">
    </div>
    <div class="mb-3">
        <label for="precoinicial" class="form-label">Preço Inicial</label>
        <input type="text" class="form-control" placeholder="Digite o preço inicial">
    </div>
    <div class="mb-3">
        <label for="precoporhora" class="form-label">Preço Por Hora</label>
        <input type="text" class="form-control" placeholder="Digite o preço por hora">
    </div>
    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-secondary" asp-controller="Carro" asp-action="Index" role="button">Voltar</a>
</form>
</div>