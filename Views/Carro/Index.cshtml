@model List<CarroModel>
@{
    ViewData["Title"] = "Listar Veículos";
}

<div class="text-center">

   <div class="d-grig gap-2 d-md-flex justify-content-md-start">
       <a class="btn btn-primary" role="button" asp-controller="Carro" asp-action="Criar">Adicionar novo veículo</a>
   </div>

    <h1 class="display-4">Lista de Veículos</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Placa</th>
                <th scope="col">Preço Inicial</th>
                <th scope="col">Preço por hora</th>
                <th scope="col"></th>

            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach (CarroModel carro in Model)
                {
                    <tr>
                        <td>@carro.Placa</td>
                        <td>@carro.PrecoInicial</td>
                        <td>@carro.PrecoHora</td>
                        <td><a role="button" class="btn btn-success" asp-route-id="@carro.Id" asp-controller="Carro" asp-action="Retirar">Retirar Veículo</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>

